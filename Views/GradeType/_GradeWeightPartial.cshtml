@model IEnumerable<StudentGradesApp.Models.GradeType>

<div class="modal-header">
    <h5 class="modal-title">Not Ağırlıkları</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Sınav Türü</th>
                <th>Ağırlık (%)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gradeType in Model)
            {
                <tr>
                    <td>@gradeType.Name</td>
                    <td>@gradeType.Weight</td>
                    <td>
                        <a href="javascript:void(0);" onclick="editGradeWeight(@gradeType.ExamType)" class="btn btn-warning btn-sm">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
</div>